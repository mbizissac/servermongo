<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: coral;
        }

        .table-container {
            padding: 15px 20px;
             /* Add a valid CSS property here */

        }

        .title {
            font-size: 25px;
            font-weight: 600;
            padding-bottom: 10px;
        }
    </style>
</head>

<body>
    <ul class="topnav">
        <li><a class="active" href="/">Home</a></li>
        <li><a href="/create">Create User</a></li>
    </ul>
    <div class="table-container">
        <div class="title">List Users</div>
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
            </tr>
            <tr>
                <td>Peter</td>
                <td>Griffin</td>
                <td>$100</td>
                <td>$100</td>
                <td>
                    <button>Edit</button>
                    <button>Delete</button>
                </td>
            </tr>

            <% listUsers.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.name %></td>
                    <td><%= user.city %></td>
                    <td>
                        <a href="/update/<%= user.id %>">Edit</a>
                        <form action="/delete-user/<%= user.id %>" method="POST">
                        <button>Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>


</body>

</html>