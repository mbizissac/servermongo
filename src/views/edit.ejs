    <div>
        <div class="form-add-new">
            <form action="/update-user" method="POST">
                <fieldset>
                    <legend>Update a user:</legend>
                    <div class="input-group d-none">
                        <label>id</label>
                        <input type="text" name="userid" id="userid" value="<%=userEdit._id%>">
                    </div>
                    <div class="input-group">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email" value="<%=userEdit.email%>">
                    </div>
                    <div class="input-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" value="<%=userEdit.name%>">
                    </div>
                    <div class="input-group">
                        <label for="city">City</label>
                        <input type="text" name="city" id="city" value="<%=userEdit.city%>">
                    </div>
                    <div class="input-group">
                        <input type="submit" value="Save" onclick="postUpdateUser()">

                    </div>
                </fieldset>
            </form>
        </div>
    </div>
